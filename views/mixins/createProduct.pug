mixin createProduct(product)
     .col-md-4
        .card.my-3
            img(src=`/images/${product.image}` alt=`${product.name}`).card-img-top
            .card-body
                h4.card-title
                    a(href=`/products/${product.id}`) #{product.name}
            
            .card-footer
                small.text-muted
                    i.fas.fa-lira-sign #{product.price}

                a(href=`/products/${product.id}`).btn.btn-outline-primary.btn-sm.ml-3 Details

                a(href="#").btn.btn-outline-primary.btn-sm.float-right Add to Cart